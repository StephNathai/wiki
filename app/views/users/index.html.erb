<p id="notice"><%= notice %></p>
<% if current_user %>
  <div class="name"> You are logged in as: <%= current_user.first_name %></div>
  <div class="logout"> <%= link_to 'Log Out', '/logout' %> </div>
  <div class="home"><%= link_to 'Home', '/' %> </div>
  <div class="main">
<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= mail_to user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<% else %>
  <div class="home"><%= link_to 'Home', '/' %> </div>
  <br></br>
  <h1>Please log in or sign up</h1>
  <br></br>
  <div class="login_page">
    <h3>Login In</h3>
  <form action="/login" method="post" class="login_page">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
    <div>
      <lable for="email">Email:</label>
      <input name="email" type="text" />
    </div>
    <div>
      <lable for="password">Password:</label>
      <input name="password" type="password" />
    </div>
    <div>
      <input type="submit" />
    </div>
  </form>
  </div>
  <br></br>
  <h3>Sign Up </h3>
  <%= link_to 'New User', new_user_path %>
  <br></br>
  <br></br>
<% end %>





